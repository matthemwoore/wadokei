import React from "react";

export default function ClockFace() {
  const data = {
    data: {
      numbers: [
        { x: 50, y: 5, label: 12 },
        { x: 85, y: 15, label: 1 },
        { x: 95, y: 50, label: 3 },
        { x: 85, y: 85, label: 5 },
        { x: 50, y: 95, label: 6 },
        { x: 15, y: 85, label: 7 },
        { x: 5, y: 50, label: 9 },
        { x: 15, y: 15, label: 11 },
      ],
    },
  };

  return (
    <div className="flex justify-center items-center h-screen bg-gray-950">
      <svg viewBox="0 0 100 100" className="w-80 h-80">
        {/* clock circle */}
        <circle cx="50" cy="50" r="45" stroke="white" strokeWidth="2" fill="none" />
        {/* center dot */}
        <circle cx="50" cy="50" r="1.5" fill="white" />

        {/* numbers */}
        {data.data.numbers.map((num, i) => (
          <text
            key={i}
            x={num.x}
            y={num.y}
            fill="white"
            fontSize="6"
            textAnchor="middle"
            dominantBaseline="middle"
          >
            {num.label}
          </text>
        ))}
      </svg>
    </div>
  );
}

